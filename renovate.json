{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for taxbook-pro",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":preserveSemverRanges"
  ],
  "labels": ["dependencies"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "schedule": ["before 9am on Monday"],
  "timezone": "America/New_York",
  "packageRules": [
    {
      "description": "Security updates - immediate",
      "matchUpdateTypes": ["patch"],
      "matchCategories": ["security"],
      "automerge": true,
      "schedule": ["at any time"]
    },
    {
      "description": "Patch updates - automerge",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Minor updates - group by Monday",
      "matchUpdateTypes": ["minor"],
      "groupName": "minor-updates",
      "schedule": ["before 9am on Monday"]
    },
    {
      "description": "Major updates - manual review",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "major-update"],
      "automerge": false
    },
    {
      "description": "React ecosystem - group together",
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"],
      "groupName": "react"
    },
    {
      "description": "Next.js - separate for careful review",
      "matchPackageNames": ["next"],
      "groupName": "nextjs",
      "labels": ["dependencies", "nextjs"]
    },
    {
      "description": "TypeScript - separate for careful review",
      "matchPackageNames": ["typescript"],
      "groupName": "typescript",
      "labels": ["dependencies", "typescript"]
    },
    {
      "description": "Testing tools - group together",
      "matchPackageNames": ["vitest", "@playwright/test", "@axe-core/playwright"],
      "groupName": "testing"
    },
    {
      "description": "Radix UI - group together",
      "matchPackagePatterns": ["^@radix-ui/"],
      "groupName": "radix-ui"
    },
    {
      "description": "Supabase - group together",
      "matchPackagePatterns": ["^@supabase/"],
      "groupName": "supabase"
    },
    {
      "description": "ESLint ecosystem - group together",
      "matchPackagePatterns": ["^eslint", "^@typescript-eslint/"],
      "groupName": "eslint"
    },
    {
      "description": "Dev dependencies - lower priority",
      "matchDepTypes": ["devDependencies"],
      "prPriority": -1
    },
    {
      "description": "Pin versions in CI",
      "matchPaths": [".github/workflows/**"],
      "rangeStrategy": "pin"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "dependencies"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on the first day of the month"]
  },
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "commitMessagePrefix": "deps:",
  "commitMessageAction": "update"
}
